{
  "manifest_version": 3,
  "name": "My Extension Framework",
  "version": "1.0",
  "description": "A basic starter template for Chrome Extensions",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
